%header#header-container
  / Header
  #header
    .container
      / Left Side Content
      .left-side
        / Logo
        #logo
          %a{:href => root_path}
            %img{:alt => "", :src => image_path("template/images/logo.png")}/
        / Mobile Navigation
        .mmenu-trigger
          %button.hamburger.hamburger--collapse{:type => "button"}
            %span.hamburger-box
              %span.hamburger-inner
        / Main Navigation
        %nav#navigation.style-1
          %ul#responsive
            %li
              %a.moveToLink.current{:href => "#rev_slider_4_1_wrapper"}= t(:home)
            %li
              %a.moveToLink{:href => "#our-services"}= t(:our_services)
            %li
              %a.moveToLink{:href => "#our-story"}= t(:our_story)
            %li
              %a.moveToLink{:href => "#how-it-works"}= t(:how_it_works)
        .clearfix
        / Main Navigation / End
      / Left Side Content / End
      / Right Side Content / End
      .right-side
        .header-widget
          %ul.lang
            %li.lang-icon
              %i.sl.sl-icon-globe
            %li
              %a{:href => url_for(lang: :en)} English
            %li
              %a{:href => url_for(lang: :"zh-CN")} 中文

          %a.moveToLink.button.border.with-icon{:href => "#contact"}
            = t(:contact_us)
            %i.im.im-icon-Business-Woman
      / Right Side Content / End
  / Header / End
.clearfix
/ Header Container / End
